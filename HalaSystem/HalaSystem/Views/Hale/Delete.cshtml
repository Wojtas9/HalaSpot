@model HalaSystem.Models.Hala

@{
    ViewData["Title"] = "Delete";
}

<h1>Usuwanie Hali</h1>

<h3>Czy jesteś pewien, że chcesz to Usunąć?</h3>
<div>
    <h4>Hala</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nazwa)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nazwa)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Adres)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Adres)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IloscMiejsc)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IloscMiejsc)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <div>
            <div class="mt-3">
                <a asp-action="Index" class="btn btn-warning">
                    <i class="bi bi-backspace"></i> Wróć do listy
                </a>
            </div>
        </div>
    </form>
</div>
