@model HalaSystem.Models.Hala

@{
    ViewData["Title"] = "Create";
}

<div class="container my-4">
    <h2 class="text-center mb-4">Nowa Hala</h2>
    <hr />
<div class="row">
    <div class="col-md-4 mx-auto">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nazwa" class="control-label"></label>
                <input asp-for="Nazwa" class="form-control" placeholder="Wpisz nazwę" />
                <span asp-validation-for="Nazwa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Adres" class="control-label"></label>
                <input asp-for="Adres" class="form-control" placeholder="Wpisz adres" />
                <span asp-validation-for="Adres" class="text-danger"></span>
            </div>
                <div class="form-group mb-3">
                <label asp-for="IloscMiejsc" class="control-label"></label>
                <input asp-for="IloscMiejsc" class="form-control" placeholder="Wpisz ilość miejsc" />
                <span asp-validation-for="IloscMiejsc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Utwórz" class="btn-success w-100" />
            </div>
        </form>
    </div>
</div>

<div>
    <div class="mt-3">
    <a asp-action="Index" class="btn btn-warning">
        <i class="bi bi-backspace"></i> Wróć do listy
    </a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
