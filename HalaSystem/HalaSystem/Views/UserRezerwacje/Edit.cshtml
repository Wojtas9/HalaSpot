@model HalaSystem.Models.Rezerwacja

@{
    ViewData["Title"] = "Edit";
}

<h1>Edycja</h1>

<h4>Rezerwacja</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="HalaId" class="control-label"></label>
                <select asp-for="HalaId" class="form-control" asp-items="ViewBag.HalaId"></select>
                <span asp-validation-for="HalaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <input asp-for="UserId" class="form-control" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Od" class="control-label"></label>
                <input asp-for="Od" class="form-control" />
                <span asp-validation-for="Od" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Do" class="control-label"></label>
                <input asp-for="Do" class="form-control" />
                <span asp-validation-for="Do" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-warning">
            <i class="bi bi-backspace"></i> Wróć do listy
        </a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
