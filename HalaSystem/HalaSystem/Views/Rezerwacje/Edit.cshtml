@model HalaSystem.Models.Rezerwacja

@{
    ViewData["Title"] = "Edit";
}

<div class="container my-4">
    <h2 class="text-center mb-4">Edytowanie Rezerwacji</h2>
    <hr />
    <div class="col-md-4 mx-auto">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="HalaId" class="control-label"></label>
                <select asp-for="HalaId" class="form-control" asp-items="ViewBag.HalaId"></select>
                <span asp-validation-for="HalaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <input asp-for="UserId" class="form-control" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Od" class="control-label"></label>
                <input asp-for="Od" class="form-control" />
                <span asp-validation-for="Od" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Do" class="control-label"></label>
                <input asp-for="Do" class="form-control" />
                <span asp-validation-for="Do" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn-success w-100">
                <i class="bi bi-download"></i> Zapisz
                </button>
            </div>
        </form>
    </div>
</div>

<div>
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-warning">
            <i class="bi bi-backspace"></i> Wróć do listy
        </a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
